<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/main_top_layout" />

    <FrameLayout
        android:id="@+id/friends_fl_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_bg"
        android:orientation="vertical"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">

        <EditText
            android:id="@+id/friends_et_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/m_03"
            android:hint="输入好友名字"
            android:paddingLeft="8dp"
            android:textColorHint="@color/new_color_3"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/m14_07" />

    </FrameLayout>

    <ListView
        android:id="@+id/lv_my_friends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/window_bg"
        android:dividerHeight="2dp"></ListView>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/window_bg" />
</LinearLayout>
