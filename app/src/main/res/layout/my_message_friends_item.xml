<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_message_friends_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="冷月"
            android:textColor="@color/main_bar"
            android:textSize="@dimen/new_size_3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_message_friends_name"
            android:text="请求加您为好友"
            android:textColor="@color/new_color_2"
            android:textSize="@dimen/new_size_3" />

        <TextView
            android:id="@+id/tv_message_friends_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_message_friends_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="2015-6-26   16:36:59"
            android:textColor="@color/new_color_2"
            android:textSize="@dimen/new_size_3" />

        <Button
            android:id="@+id/tv_message_friends_ok"
            android:layout_width="60dp"
            android:layout_height="32dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/tv_message_friends_no"
            android:background="@drawable/m6_07"
            android:maxLines="2"
            android:text="同意"
            android:textColor="@color/holo_green_dark"
            android:textSize="@dimen/new_size_2" />

        <Button
            android:id="@+id/tv_message_friends_no"
            android:layout_width="60dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/m6_09"
            android:maxLines="2"
            android:text="拒绝"
            android:textColor="@color/red"
            android:textSize="@dimen/new_size_2" />

        <TextView
            android:id="@+id/tv_message_friends_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/main_bar"
            android:textSize="@dimen/new_size_3" />
    </RelativeLayout>

</LinearLayout>