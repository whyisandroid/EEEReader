    <resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/transparent_color</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="tab_rb_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:textColor">@color/tabs_tv_color_select</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">@dimen/new_size_1</item>
        <item name="android:padding">@dimen/dimen_small</item>
    </style>

    <style name="FullHeightDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="add_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent_color</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="myRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_list</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
    </style>

    <style name="myBookImage">
        <item name="android:layout_width">57dp</item>
        <item name="android:layout_height">74dp</item>
        <item name="android:src">@drawable/b1_03</item>
    </style>


        <!-- My添加 -->
        <style name="DialogBaseTheme" parent="@android:style/Theme.Dialog">
            <item name="android:windowBackground">@android:color/transparent</item>
            <item name="colorBackgroundCacheHint">@null</item>
        </style>

        <style name="GridItemMenuTheme" parent="DialogBaseTheme">
            <item name="android:windowAnimationStyle">@style/BottomWindowAnimation</item>
            <item name="android:windowIsFloating">false</item>
            <item name="android:windowIsTranslucent">true</item>
        </style>

        <style name="MenuDialogTheme" parent="DialogBaseTheme">
            <item name="android:windowAnimationStyle">@style/BottomWindowAnimation</item>
            <item name="android:windowIsFloating">false</item>
            <item name="android:windowIsTranslucent">true</item>
        </style>

        <style name="BookDeleteConformDialogTheme" parent="DialogBaseTheme"></style>

        <style name="ReaderTheme" parent="@style/Theme.NoTitleBar.Fullscreen">
        </style>

        <style name="ChapterDialog" parent="@style/Theme.NoTitleBar.Fullscreen"></style>

        <style name="GridMenuItem">
            <item name="android:textSize">@dimen/font_size_large</item>
            <item name="android:textColor">@color/text_color_1</item>
        </style>

        <style name="BottomWindowAnimation">
            <item name="android:windowEnterAnimation">@anim/bottom_fade_in_a</item>
            <item name="android:windowExitAnimation">@anim/bottom_fade_out_a</item>
        </style>

        <style name="EText_basic">
            <item name="android:background">@drawable/bg_03</item>
            <item name="android:paddingLeft">5dp</item>
        </style>

</resources>